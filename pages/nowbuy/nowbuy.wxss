.nowby{
	padding-bottom: 100rpx;
}
.noadd{
	padding:40rpx 0;
	text-align: center;
	color: #666;
	font-size:28rpx;
	background:#fff;
}
.buylist{
	background:#fff;
	display: flex;
    align-items: center;
    -webkit-box-align: center;
    padding: 20rpx;
}
.buylist + .buylist{
	border-top: 2rpx solid rgba(0,0,0,0.1)
}
.skuimg{
	width: 138rpx;
    height: 138rpx;
    position: relative;
    border: 2rpx solid #eee;
    vertical-align: middle;
}
.header{
	-webkit-box-flex: 1;
    -webkit-flex: 1;
    -ms-flex: 1;
    flex: 1;
    -webkit-flex-basis: 0;
    -ms-flex-preferred-size: 0;
    flex-basis: 0;
    flex-grow: 1;
    position: relative;
    margin-left: 20rpx;
}
.title{
	margin-bottom: 60rpx;
    max-height: 56rpx;
    overflow: hidden;
    font-size: 26rpx;
    color: #222;
    line-height:28rpx;
}
.price{
	color: #be8914;
    font-size: 28rpx;
}
.mesg{
	font-size: 24rpx;
    color: #666;
    position: absolute;
    width: 498rpx;
    height: 40rpx;
    line-height: 40rpx;
    left: 0;
    top:50%;
    padding-right:50rpx;
	transform:translateY(-30%);
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
}
.mesg text{
	position: absolute;
    top: 0;
    right: 0;
	font-size: 24rpx;
    color: #666;
    line-height: 40rpx;
}
.section{
	margin-top: 10rpx;
}
.section.text{
	padding:30rpx 30rpx;
	background:#fff;
	font-size: 28rpx;
	color: #999;
}
.section.text text{
	color: #222;
}
.section.text .view{
	font-size:28rpx;
	line-height: 1.4rem;
	color: #999;
	display: inline-block;
	vertical-align: middle;
	padding-right: 20rpx;
}
.section.text input{
	background-color:#fff;
	color:#666;
	text-align:left;
	font-size:28rpx;
	line-height: 1.4rem;
	vertical-align: middle;
	display: inline-block;
}
.btnfix.weui-flex{
	height: 80rpx;
