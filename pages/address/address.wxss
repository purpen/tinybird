.allress{
	padding-bottom:88rpx;
}
.addfix{
	width: 750rpx;
	height: 86rpx;
	border-top: 2rpx solid #e1e1e1;
	color: #be8914;
	font-size:32rpx;
	text-align:center;
	line-height:86rpx; 
	background: #fff;
}
.noress {
	text-align: center;
	color: #999;
	font-size: 28rpx;
	padding-top:45%;
}
.noress image{
	width: 145rpx;
	height: 145rpx;
	margin: 30rpx auto;
	display: block;
}
.addfrom{
	padding:30rpx;
}
.section{
	margin-bottom:20rpx;
}
.section input,.section picker{
	padding:20rpx 30rpx;
	background-color:#fff;
	color:#666;
	text-align:left;
	font-size:28rpx;
	line-height: 1.4rem;
}
.defalut{
	background:#fff;
	padding:20rpx 30rpx;
	font-size:28rpx;
	text-align:right;
}
.defalut text{
	float:left;
	line-height:64rpx;
	color:#666;
}
.canse{
	background:#fff;
	color: #222;
	height: 88rpx;
	line-height: 88rpx;
}
.submit{
	background:#be8914;
	color: #fff;
	height: 88rpx;
	line-height: 88rpx;
}
.addlist{
	background:#fff;
	padding:0;
	position:relative;
}
.addlist .addmsg{
	padding: 20rpx 100rpx 20rpx 30rpx;
	border-bottom: 2rpx solid rgba(0,0,0,0.1);
	position: relative;
}
.addaction{
	padding: 20rpx 30rpx;
	display:-webkit-box;
	display:-webkit-flex;
	display:flex;
}
.addaction .is_default{
	width:114rpx;
	height: 30rpx;
	margin-top:10rpx;
}
.addaction .revise{
	-webkit-box-flex:1;
	-webkit-flex:1;
	flex:1;
	text-align: right;
}
.revise .addedit{
	display:inline-block;
	width:100rpx;
	height:50rpx;
	background:#e0e1e2;
	color:#999;
	font-size:20rpx;
	line-height:50rpx;
	text-align:center;
	border-radius:4rpx;
	margin-left: 20rpx
}
.revise .addedit image{
	width:20rpx;
	height:20rpx;
	vertical-align:top;
	margin-right:6rpx;
	margin-top:14rpx;
}
.addedit + .addedit image{
	width:16rpx;
	height:16rpx;
	margin-top:16rpx;
}
.addlist .title{
	color: #222;
	font-size: 28rpx;
	display: inline-block;
	line-height:28rpx;
	vertical-align:bottom;
	margin-bottom: 5rpx;
}
.addlist .addpro{
	display: block;
	color: #222;
	font-size: 22rpx;
	margin-top:10rpx;
	overflow:hidden;
	white-space:nowrap;
	text-overflow:ellipsis;
}
.art-rigth{
	position:absolute;
	width:34rpx;
	height:34rpx;
	right:30rpx;
	top:50%;
	transform:translateY(-50%);
}
