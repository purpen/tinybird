.flex-top{
	position:fixed;
	top:100rpx;
	left:0;
	width: 750rpx;
	height: 70rpx;
	line-height: 70rpx;
	color:#666;
	background: #fff;
	flex-direction: row;
	display:flex;
	font-size: 28rpx;
	text-align: center;
	z-index:2;
}
.flex-item{
	flex:1;
}
.flex-item.active{
	color: #be8914;
}
.list{
	padding-top:200rpx;	
}
.item{
	width: 335rpx;
	margin-left: 30rpx;
	margin-right:10rpx;
	background: #fff;
	height:455rpx;
	margin-bottom: 20rpx;
	display: inline-block;
	position: relative;
}
.item:nth-child(2n){
	margin-right: 30rpx;
	margin-left: 10rpx;
}
.item .coverimg{
	width:335rpx;
	height: 335rpx;
	position: absolute;
	top: 0;
	left: 0;
}
.item .desc{
	height: 120rpx;
	padding: 5px 10px 0;
    border-top: 1px solid #f5f5f5;
    position: absolute;
    top: 335rpx;
    left: 0;
    width:295rpx;
}
.item .desc .h2{
	line-height: 60rpx;
    overflow: hidden;
    text-align: left;
    margin: 0;
    text-overflow: ellipsis;
    white-space: nowrap;
    color: #222;
    font-size: 26rpx;
    height: 50rpx;
}
.item .desc .price{
	color: #be8914;
	font-size: 28rpx;
    height: 60rpx;
    text-transform: uppercase;
}
.togprice{
	background-image: url(https://s3.taihuoniao.com/images/icon/price.png);
    background-size: 42rpx 18rpx;
    background-repeat: no-repeat;
    height: 18rpx;
    width: 14rpx;
    background-position: 0 0;
    margin-left: 8rpx;
    margin-bottom: -2rpx;
    display: inline-block;
}
.flex-item.down .togprice{
	background-position: -14rpx 0;
}
.flex-item.up .togprice{
	background-position: -28rpx 0;
}
.flex-item.kong.up .togprice{
	background-position: 0 0;
}

.flex-cate{
	height: 98rpx;
	background:#fff;
	position: fixed;
	top: 0;
	left: 0;
	z-index: 2;
	border-bottom: 2rpx solid rgba(0,0,0,0.1);
	white-space: nowrap;
	overflow: scroll;
	-webkit-overflow-scrolling: touch;
	-webkit-tap-highlight-color: transparent;
    -webkit-font-smoothing: antialiased;
}
.flex-citem{
	width: 187rpx;
	height: 98rpx;
	display: inline-block;
    text-align: center;
	line-height: 98rpx;
	font-size: 30rpx;
	color: #222;
}
.flex-citem.active{
	color: #be8914;
}