.list{
	padding:30rpx 0 10rpx;	
}
.item{
	width: 335rpx;
	margin-left: 30rpx;
	margin-right:10rpx;
	background: #fff;
	height:455rpx;
	margin-bottom: 20rpx;
	display: inline-block;
	position: relative;
}
.item:nth-child(2n){
	margin-right: 30rpx;
	margin-left: 10rpx;
}
.item .coverimg{
	width:335rpx;
	height: 335rpx;
	position: absolute;
	top: 0;
	left: 0;
}
.item .desc{
	height: 120rpx;
	padding: 5px 10px 0;
    border-top: 1px solid #f5f5f5;
    position: absolute;
    top: 335rpx;
    left: 0;
    width:295rpx;
}
.item .desc .h2{
	line-height: 60rpx;
    overflow: hidden;
    text-align: left;
    margin: 0;
    text-overflow: ellipsis;
    white-space: nowrap;
    color: #222;
    font-size: 26rpx;
    height: 50rpx;
}
.item .desc .price{
	color: #be8914;
	font-size: 28rpx;
    height: 60rpx;
    text-transform: uppercase;
}